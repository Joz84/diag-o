<%= render "shared/breadcrumb", page: @page %>

<div class="flex-horizontal">
  <div class="signup-box">
    <div class="signup-top flexbox">
      <h3 class="text-center "><%= t('inscription.signup1') %></h3>
    </div>
    <div class="signup-form">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs ">
          <p>Prénom*</p>
          <%= f.input :first_name, required: true, label: false %>
          <p>Nom*</p>
          <%= f.input :last_name, required: true, label: false %>
          <p>Téléphone*</p>
          <%= f.input :phone, required: true, label: false %>
          <p>Email*</p>
          <%= f.input :email, required: true, autofocus: true, label: false %>
          <p>Mot de passe</p>
          <%= f.input :password, required: true, label: false, hint: ("#{@minimum_password_length} characters minimum"if @minimum_password_length) %>
          <p>Retaper le mot de passe</p>
          <%= f.input :password_confirmation, required: true, label: false %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, t('inscription.validation'), class: "btn btn-anis" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
