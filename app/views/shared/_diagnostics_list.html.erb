<% @diagnostics.each do |diagnostic| %>
  <%= link_to diagnostician_diagnostic_path(diagnostic) do %>
    <div class="user">
      <div class="line">
        <div class="user-name">
          <h5>Diagnostic r√©f diag-o<%= diagnostic.id %></h5>
        </div>
        <div class="user-status">
          <h5>Rendez-vous du <%= diagnostic.booking.set_at.strftime("%d %b %Y") %></h5>
        </div>
      </div>
      <div class="line">
        <div>
          <p class="user-data address"><%= diagnostic.booking.booker.first_name %> <%= diagnostic.booking.booker.last_name %> : <%= diagnostic.booking.housing.address %></p>
        </div>
      <% end %>
        <div class="min-width text-right">
          <p class="status declined"><%= "En cours" %>
          <% if @user.diagnostician? %>
            <%= link_to edit_diagnostician_diagnostic_path(diagnostic) do %>
              <i class="fa fa-pencil"></i>
            <% end %>
          <% end %>
          </p>
        </div>
      </div>
    </div>
<% end %>
