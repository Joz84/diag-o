<% @diagnostics.each do |diagnostic| %>
    <div class="list-element">
      <div class="line">
        <div class="user-name">
          <h5>Diagnostic r√©f diag-o<%= diagnostic.id %></h5>
        </div>
        <div class="user-status">
          <h5>Rendez-vous du <%= diagnostic.booking.set_at.strftime("%d %b %Y") %></h5>
        </div>
      </div>
      <div class="line">
        <div>
          <p class="user-data address">
            <%= diagnostic.booking.booker.first_name %> <%= diagnostic.booking.booker.last_name %> : <%= diagnostic.booking.housing.address %>
          </p>
        </div>
        <div class="min-width text-right">
          <p class="status declined"><%= t('diagnostic.pending') %>
            <%= link_to(content_tag(:i, nil, class: 'fa fa-eye'), diagnostician_diagnostic_path(diagnostic))%>
            <% if @user.diagnostician? %>
              <%= link_to(content_tag(:i, nil, class: 'fa fa-pencil'), edit_diagnostician_diagnostic_path(diagnostic)) %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
<% end %>
