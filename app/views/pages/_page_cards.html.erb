<div class="banner" id=<%= page_id %> style="background-image: url(<%= image %> );" >
    <div class="page-content container text-center">
      <div class="row">
        <div class="col-xs-12">
          <h3><%= title %></h3>
        </div>
        <%# 3.times do |x| %>
        <div class="col-xs-4">
          <div class="card-info">
            <i class="fa fa-<%= icon1 %>" aria-hidden="true"></i>
            <p><%= card1 %></p>
          </div>
        </div>
        <%# end %>
        <div class="col-xs-4">
          <div class="card-info">
            <i class="fa fa-<%= icon2 %>" aria-hidden="true"></i>
            <p><%= card2 %></p>
          </div>
        </div>
        <div class="col-xs-4">
          <div class="card-info">
            <i class="fa fa-<%= icon3 %>" aria-hidden="true"></i>
            <p><%= card3 %></p>
          </div>
        </div>
      </div>
    </div>
    <%= render 'shared/next_page', target_page: target_page, icon: "fa-arrow-circle-up" %>
  </div>
</div>
